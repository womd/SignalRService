
@{
    ViewBag.Title = BaseResource.Get("TitleOrderList");
}

<div id="OrderListJTable"></div>


    <script>

        function init_OrdersJTable() {

            $('#OrderListJTable').jtable({
                title: '@BaseResource.Get("TitleOrderList")',
                paging: true, //Enable paging
                pageSize: 10, //Set page size (default: 10)
                sorting: true, //Enable sorting
                defaultSorting: 'CreationDate ASC', //Set default sorting
                actions: {
                    listAction: function (postData, jtParams) { return jtable_datasource.list(postData, jtParams, "Order", "List") },
                    createAction: function (postData, jtParams) { return jtable_datasource.create(postData, "Order", "Create") },
                    updateAction: function (postData, jtParams) { return jtable_datasource.update(postData, "Order", "Update") },
                    deleteAction: function (postData, jtParams) { return jtable_datasource.delete(postData, "Localization", "Delete") }
                },
                fields: {
                    CustomerUser: {
                        title: '@BaseResource.Get("CustomerName")',
                        display: function (data) {
                            return data.record.CustomerUser.Name;
                        }
                    },
                    StoreUser: {
                        title: '@BaseResource.Get("StoreUserName")',
                        display: function (data) {
                            return data.record.StoreUser.Name;
                        }
                    },
                    OrderIdentifier: {
                        title: '@BaseResource.Get("OrderIdentifier")',
                        key: true
                    },
                    OrderState: {
                        title: '@BaseResource.Get("OrderState")'
                    },
                    OrderType: {
                        title: '@BaseResource.Get("OrderType")'
                    },
                    CreationDate: {
                        title: '@BaseResource.Get("CreationDate")'
                    }
                }
            });
        }

    $(function () {

        init_OrdersJTable();
        $('#OrderListJTable').jtable('load');

    });



    </script>


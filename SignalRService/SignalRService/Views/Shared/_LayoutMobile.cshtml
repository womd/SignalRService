<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SRS</title>
    @Styles.Render("~/Content/mobilecss")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>

    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>

</head>
<body>
    
    <div data-role="page" class="mainpage">
        <div data-role="panel" id="pagepannel1"></div>
        <div data-role="panel" id="pagepannel2">
            @Html.Partial("ProductEditFormPartial")
        </div>
        <div class="culturewrapper">@SignalRService.Utils.CultureHelper.GetCurrentCulture()</div>
        <div data-role="content">
            @RenderBody()
        </div>
    </div>
    <script>
        $(document).on("panelbeforeopen", "div[data-role='panel']", function (e, ui) {
            $.mobile.activeClickedLink = null;
        });

    </script>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    @*@Scripts.Render("~/bundles/signalr")*@
    @RenderSection("scripts", required: false)
</body>
</html>

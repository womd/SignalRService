
@{
    Layout = "~/Views/Shared/_LayoutBackend.cshtml";
}


@{
    ViewBag.Title = BaseResource.Get("TitleLocalizationIndex");
}

<div id="LocalizationTable"></div>

<script>

        function init_LocalizationJTable() {

            $('#LocalizationTable').jtable({
                
                title: '@BaseResource.Get("TitleLocalizationTable")',
                //sorting: true,
                actions: {
                    listAction: function (postData, jtParams) { return jtable_datasource.list(postData, jtParams, "Localization", "List") },
                    createAction: function (postData) { return jtable_datasource.create(postData, "Localization", "Create") },
                    updateAction: function (postData) { return jtable_datasource.update(postData, "Localization", "Update") },
                    deleteAction: function (postData) { return jtable_datasource.delete(postData, "Localization", "Delete") }
                },
                fields: {
                    Id: {
                        key: true,
                        list: true,
                        visibility: "hidden"
                    },
                    Culture: {
                        title: '@BaseResource.Get("LocalizationCulture")',
                        create: true,
                        edit: true,
                    },
                    Key: {
                        title: '@BaseResource.Get("LocalizationKey")',
                        create: true,
                        edit: true,
                    },
                    Value: {
                        title: '@BaseResource.Get("LocalizationValue")',
                        create: true,
                        edit: true
                    },
                    LastModDate: {
                        title: '@BaseResource.Get("LocalizationLastModeDate")',
                        create: false,
                        edit: false,
                        type: 'date'
                    },
                    ModUser: {
                        title: '@BaseResource.Get("LocalizationModUser")',
                        create: false,
                        edit: false,
                        visibility: "hidden"
                    },
                    WasHit: {
                        title: '@BaseResource.Get("LocalizationWasHit")',
                        create: false,
                        edit: false,
                        visibility: "hidden"
                    },
                    TranslationStatus: {
                        title: '@BaseResource.Get("LocalizationTStatus")',
                        create: false,
                        edit: false,
                        visibility: "hidden"
                    }
                }
            });
        }

    $(function () {

        init_LocalizationJTable();
     

        $('#LocalizationTable').jtable('load');

    });

   

</script>

